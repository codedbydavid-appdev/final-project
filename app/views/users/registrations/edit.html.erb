<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        Edit <%= resource_name.to_s.titleize %>
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>

        <% form_html_options = { method: :put, novalidate: true, class: "mb-3" } %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>
          <% if flash[:notice].present? %>
            <div class="alert alert-info" role="alert">
              <%= flash[:notice] %>
            </div>
          <% end %>

          <% if flash[:alert].present? %>
            <div class="alert alert-danger" role="alert">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, autofocus: true, class: email_class, :placeholder => "email confirmation is not required (yet)" %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <small class="form-text text-muted">
                Currently awaiting confirmation for <%= resource.unconfirmed_email %>.
              </small>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class, autocomplete: "off" %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <small class="form-text text-muted">
              Leave blank if you don't want to change it.

              <% if @minimum_password_length %>
                <%= @minimum_password_length %> characters minimum.
              <% end %>
            </small>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class, autocomplete: "off" %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% current_password_was_invalid = resource.errors.include?(:current_password) %>

            <% current_password_class = "form-control" %>

            <% if was_validated %>
              <% if current_password_was_invalid %>
                <% current_password_class << " is-invalid" %>
              <% else %>
                <% current_password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :current_password %>

            <%= f.password_field :current_password, class: current_password_class, autocomplete: "off" %>

            <% if current_password_was_invalid %>
              <% resource.errors.full_messages_for(:current_password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <small class="form-text text-muted">
              We need your current password to confirm your changes.
            </small>
          </div>

          
          <!-- Devise Input for username start -->
          <div class="form-group">
            <% username_was_invalid = resource.errors.include?(:username) %>

            <% username_class = "form-control" %>

            <% if was_validated %>
              <% if username_was_invalid %>
                <% username_class << " is-invalid" %>
              <% else %>
                <% username_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :username %>

            <%= f.text_field :username, :class => username_class, :placeholder => "something unique" %>

            <% if username_was_invalid %>
              <% resource.errors.full_messages_for(:username).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for username end -->
          
          <!-- Devise Input for bio start -->
          <div class="form-group">
            <% bio_was_invalid = resource.errors.include?(:bio) %>

            <% bio_class = "form-control" %>

            <% if was_validated %>
              <% if bio_was_invalid %>
                <% bio_class << " is-invalid" %>
              <% else %>
                <% bio_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :bio %>

            <%= f.text_area :bio, :class => bio_class, :placeholder => "share something about yourself (optional)" %>

            <% if bio_was_invalid %>
              <% resource.errors.full_messages_for(:bio).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for bio end -->
          
          <!-- Devise Input for website_url start -->
          <div class="form-group">
            <% website_url_was_invalid = resource.errors.include?(:website_url) %>

            <% website_url_class = "form-control" %>

            <% if was_validated %>
              <% if website_url_was_invalid %>
                <% website_url_class << " is-invalid" %>
              <% else %>
                <% website_url_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :website_url %>

            <%= f.text_field :website_url, :class => website_url_class, :placeholder => "link to website, blog, newsletter signup, ..." %>

            <% if website_url_was_invalid %>
              <% resource.errors.full_messages_for(:website_url).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for website_url end -->
          
          <!-- Devise Input for fb_account start -->
          <div class="form-group">
            <% fb_account_was_invalid = resource.errors.include?(:fb_account) %>

            <% fb_account_class = "form-control" %>

            <% if was_validated %>
              <% if fb_account_was_invalid %>
                <% fb_account_class << " is-invalid" %>
              <% else %>
                <% fb_account_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :fb_account %>

            <%= f.text_field :fb_account, :class => fb_account_class, :placeholder => "link to Facebook account (optional)" %>

            <% if fb_account_was_invalid %>
              <% resource.errors.full_messages_for(:fb_account).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for fb_account end -->
          
          <!-- Devise Input for twitter_account start -->
          <div class="form-group">
            <% twitter_account_was_invalid = resource.errors.include?(:twitter_account) %>

            <% twitter_account_class = "form-control" %>

            <% if was_validated %>
              <% if twitter_account_was_invalid %>
                <% twitter_account_class << " is-invalid" %>
              <% else %>
                <% twitter_account_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :twitter_account %>

            <%= f.text_field :twitter_account, :class => twitter_account_class, :placeholder => "link to Twitter account (optional)" %>

            <% if twitter_account_was_invalid %>
              <% resource.errors.full_messages_for(:twitter_account).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for twitter_account end -->
          
          <!-- Devise Input for linkedin_account start -->
          <div class="form-group">
            <% linkedin_account_was_invalid = resource.errors.include?(:linkedin_account) %>

            <% linkedin_account_class = "form-control" %>

            <% if was_validated %>
              <% if linkedin_account_was_invalid %>
                <% linkedin_account_class << " is-invalid" %>
              <% else %>
                <% linkedin_account_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :linkedin_account %>

            <%= f.text_field :linkedin_account, :class => linkedin_account_class, :placeholder => "link to Linkedin account (optional)" %>

            <% if linkedin_account_was_invalid %>
              <% resource.errors.full_messages_for(:linkedin_account).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for linkedin_account end -->
          
          
          <%= f.submit "Update", class: "btn btn-block btn-outline-primary" %>
        <% end %>

        <%= link_to "Back", :back, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="card-footer">
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn btn-block btn-link", method: :delete %>
      </div>
    </div>
  </div>
</div>

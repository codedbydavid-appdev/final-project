<!-- New article button -->
<div class="row mt-3 mb-5">
<div class="col-md-8 offset-md-2">
  <div class="btn-group d-flex" role="group">
    <a href="/users" class="btn btn-danger w-100">
      <i class="fas fa-users"></i>
      Our amazing community
    </a>
    <a href="/feedback" class="btn btn-outline-danger w-100" rel="nofollow">
      <i class="fas fa-medkit"></i>
      Give some feedback!
    </a>
  </div>
</div> <!-- col -->
</div> <!-- row -->

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
      
            <!-- card title -->
            <div class="card-header">
              <a style="color:black">
                <h4 class="card-title">
                  Cheers to you for being part of us
              </h4></a>
            </div> <!-- card header -->
      
      
            <div class="card-body">  
                <ul class="list-group list-group-flush">
                    <% users_sorted = @users.sort_by{|hsh| hsh[:username]} %>
                    <% users_sorted.each do |user| %>
                        <li class="list-group-item"><a href="/users/<%=user.id%>"><%= user.username %></a></li>
                    <% end %>
                  </ul>
            </div>
        </div>
    </div>
</div>
    
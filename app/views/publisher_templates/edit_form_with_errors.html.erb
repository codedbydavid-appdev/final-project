<% if @publisher.errors.any? %>
  <% @publisher.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit publisher #<%= @publisher.id %>
</h1>

<hr>

<form action="/update_publisher/<%= @publisher.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <textarea id="name" name="name" class="form-control" rows="3"><%= @publisher.name %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update publisher
  </button>
</form>

<hr>

<a href="/publishers">
  Go back
</a>

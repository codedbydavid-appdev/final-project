<!-- Validation failure messages -->
<% if @description.present? %>
  <% if @description.errors.any? %>
    <% @description.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new description
</h1>


<hr>

<form action="/create_description" method="post">

  <div class="form-group">
    <label for="hashtag_id">
      Hashtag
    </label>

    <input type="text" id="hashtag_id" name="hashtag_id" class="form-control" value="<%= @description.hashtag_id %>">
  </div>

  <div class="form-group">
    <label for="article_id">
      Article
    </label>

    <input type="text" id="article_id" name="article_id" class="form-control" value="<%= @description.article_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create description
  </button>
</form>

<hr>

<a href="/descriptions">
  Go back
</a>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Description #<%= @description.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/descriptions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/descriptions/<%= @description.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit description
        </a>
      </div>

      <div class="col">
        <a href="/delete_description/<%= @description.id %>" class="btn btn-block btn-outline-secondary">
          Delete description
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Hashtag
      </dt>
      <dd>
        <%= @description.hashtag_id %>
      </dd>

      <dt>
        Article
      </dt>
      <dd>
        <%= @description.article_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@description.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@description.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>


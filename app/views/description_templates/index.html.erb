<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All descriptions
    </h1>

    <a href="/descriptions/new" class="btn btn-block btn-outline-secondary">
      Add a new description
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Hashtag
        </th>

        <th>
          Article
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @descriptions.each do |description| %>
      <tr>
        <td>
          <%= description.id %>
        </td>

        <td>
          <%= description.hashtag_id %>
        </td>

        <td>
          <%= description.article_id %>
        </td>

        <td>
          <%= time_ago_in_words(description.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(description.updated_at) %> ago
        </td>

        <td>
          <a href="/descriptions/<%= description.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

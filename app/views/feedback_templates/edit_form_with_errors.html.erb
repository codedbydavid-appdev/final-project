<% if @feedback.errors.any? %>
  <% @feedback.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit feedback #<%= @feedback.id %>
</h1>

<hr>

<form action="/update_feedback/<%= @feedback.id %>" method="post">

  <div class="form-group">
    <label for="topic">
      Topic
    </label>

    <textarea id="topic" name="topic" class="form-control" rows="3"><%= @feedback.topic %></textarea>
  </div>

  <div class="form-group">
    <label for="pagination">
      Pagination
    </label>

    <textarea id="pagination" name="pagination" class="form-control" rows="3"><%= @feedback.pagination %></textarea>
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @feedback.description %></textarea>
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @feedback.user_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update feedback
  </button>
</form>

<hr>

<a href="/feedbacks">
  Go back
</a>

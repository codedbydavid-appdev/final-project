<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All hashtags
    </h1>

    <a href="/hashtags/new" class="btn btn-block btn-outline-secondary">
      Add a new hashtag
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Tag
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @hashtags.each do |hashtag| %>
      <tr>
        <td>
          <%= hashtag.id %>
        </td>

        <td>
          <%= hashtag.tag %>
        </td>

        <td>
          <%= time_ago_in_words(hashtag.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(hashtag.updated_at) %> ago
        </td>

        <td>
          <a href="/hashtags/<%= hashtag.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

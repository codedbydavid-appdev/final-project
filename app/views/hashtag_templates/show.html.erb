<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Hashtag #<%= @hashtag.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/hashtags" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/hashtags/<%= @hashtag.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit hashtag
        </a>
      </div>

      <div class="col">
        <a href="/delete_hashtag/<%= @hashtag.id %>" class="btn btn-block btn-outline-secondary">
          Delete hashtag
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Tag
      </dt>
      <dd>
        <%= @hashtag.tag %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@hashtag.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@hashtag.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>


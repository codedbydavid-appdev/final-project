<% if @rating.errors.any? %>
  <% @rating.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit rating #<%= @rating.id %>
</h1>

<hr>

<form action="/update_rating/<%= @rating.id %>" method="post">

  <div class="form-group">
    <label for="score">
      Score
    </label>

    <input type="text" id="score" name="score" class="form-control" value="<%= @rating.score %>">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @rating.user_id %>">
  </div>

  <div class="form-group">
    <label for="article_id">
      Article
    </label>

    <input type="text" id="article_id" name="article_id" class="form-control" value="<%= @rating.article_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update rating
  </button>
</form>

<hr>

<a href="/ratings">
  Go back
</a>

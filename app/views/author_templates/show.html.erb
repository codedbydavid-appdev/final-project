<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Author #<%= @author.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/authors" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/authors/<%= @author.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit author
        </a>
      </div>

      <div class="col">
        <a href="/delete_author/<%= @author.id %>" class="btn btn-block btn-outline-secondary">
          Delete author
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @author.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@author.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@author.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

